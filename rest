<div class="col-lg-5 col-md-8">
            <form id="submit-form">
              <div class="form-group">
                
                <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" onkeyup="nameValidate()" required>
              </div>
              <div id="errormsg"></div>
              <div class="form-group mt-3">
                <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" onkeyup="emailValidate()">
              </div>
              <div id="errormsg1"> </div>
              <div class="form-group mt-3">
                <input type="number" class="form-control" name="subject" id="number" placeholder="phone number" onkeyup="mobileValidate()">
              </div>
              <div id="errormsg2"> </div>
              <div class="form-group mt-3">
                <textarea class="form-control" id="msg" name="message" rows="5" placeholder="Message" onkeyup="messageValidate()"></textarea>
              </div>
              <div id="errormsg3"> </div>
              <div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Your message has been sent. Thank you!</div>
              </div>
              <div class="text-center"><button type="button" onclick="validate()">Send Message</button></div>
            </form>
          </div>

